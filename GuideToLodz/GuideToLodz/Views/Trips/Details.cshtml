@model GuideToLodz.Models.Trip

@{
    ViewBag.Title = "Details";
}
<div class="col-md-4" style="float:left;width:30%">
    <h2>@Html.DisplayFor(model => model.Name)</h2>
    <h3>@Html.DisplayFor(model => model.Localisation)</h3>
</div>
<div class="col-md-6" style="float:left;width:70%;color:#FF7400">
    <h2> &nbsp;</h2>
    <h2>Suggested time to spent: @Html.DisplayFor(model => model.SuggestedTime) hours</h2>
   
</div>
<div class="col-md-12" style="clear:both;width:100%;height:100px">
    <hr />
    <div class="col-md-4" >
        <div class="col-md-5">
            Is for Kids ?
        </div>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.IsForKids)
        </div>
        <div class="col-md-5">
           Near to centre ?
        </div>
        <div class="col-md-3">
        @Html.DisplayFor(model => model.IsInCentre)
        </div>
        <div class="col-md-5">
            Gourmet ?
        </div>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.IsGourmet)
        </div>
        
    </div>

    <div class="col-md-4" >
        <div class="col-md-5">
            Historic ?
        </div>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.IsHistorical)
        </div>
        <div class="col-md-5">
            Culture ?
        </div>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.IsCultural)
        </div>
        <div class="col-md-5">
            Recreation ?
        </div>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.IsRecreational)
        </div>

    </div>
    <div class="col-md-4" >
        <div class="col-md-5">
            Sport ?
        </div>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.IsSport)
        </div>
        <div class="col-md-5">
            Is winterish ?
        </div>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.IsWinterish)
        </div>
        <div class="col-md-5">
            Is summerish ?
        </div>
        <div class="col-md-3">
            @Html.DisplayFor(model => model.IsSummerish)
        </div>
    </div>
   
   
</div>

   

